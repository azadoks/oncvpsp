{
    "fortran.formatting.formatter": "findent",
    "fortran.formatting.findentArgs": [
        "-ofree",
        "--refactor_end",
        "-i4",
        "--indent_contains=restart",
        "--indent_continuation=default",
        "--indent_ampersand",
        "--align_paren",
    ],
    "cSpell.enabled": false,
    "search.exclude": {
        "**/*.mod": true,
        "extern/": true,
        "build/": true
    },
    "files.exclude": {
        "**/.git": true,
        "**/*.mod": true,
    }
}
